@using Asmp2.Shared.Model;
@using System.Globalization;
@inject HttpClient Http

<h1>Overview</h1>
<RadzenChart SeriesClick=@HandleSeriesClick style="height: 400px">
    <RadzenColumnSeries 
        Data="@statistics" 
        CategoryProperty="TimestampStart.DateTime" 
        Title="Power usage" 
        LineType="LineType.Dashed" 
        ValueProperty="PowerUsage.Total">
    </RadzenColumnSeries>
    <RadzenColumnOptions Radius="25" />
    <RadzenLegend Position="LegendPosition.Bottom" />
</RadzenChart>

